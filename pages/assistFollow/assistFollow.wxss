  margin-top: 16rpx;
}
.container .follow_wrapper .step_item .si_middle .sim_statusbtn {
  background: rgba(235, 154, 34, 0.05);
  border-radius: 4px;
  padding: 0 8rpx;
  font-size: 20rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #eb9a22;
  line-height: 28rpx;
}
.container .follow_wrapper .step_item .si_middle .simsb_wraning {
  color: #eb9a22;
  background: rgba(235, 154, 34, 0.05);
}
.container .follow_wrapper .step_item .si_middle .simsb_primary {
  color: #3173cd;
  background: rgba(49, 115, 205, 0.05);
}
.container .follow_wrapper .step_item .si_bottom {
  margin-top: 22rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 36rpx;
}
.container .follow_wrapper .step_item .rotate_spot {
  width: 8rpx;
  height: 8rpx;
  background: #3173cd;
  position: absolute;
  top: 34rpx;
  left: -22rpx;
  transform: rotate(45deg);
  box-sizing: border-box;
  margin: 6rpx 0;
