.container {
  display: flex;
  flex-direction: column;
}
.container .search_wrapper {
  height: 88rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.container .search_wrapper .item {
  height: 100%;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #212121;
  position: relative;
}
.container .search_wrapper .selectedItem {
  font-size: 32rpx;
  font-family: DFPKingGothicGB-Medium, DFPKingGothicGB;
  font-weight: 500;
  color: #3173cd;
  position: relative;
}
.container .search_wrapper .selectedItem ::before {
  content: " ";
  height: 4rpx;
  width: 40rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  background-color: #3173cd;
}
.container .clues {
  height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.container .clues .clues_item {
  padding: 30rpx 0;
  background-color: #fff;
  box-sizing: border-box;
  margin: 20rpx 30rpx 0;
}
.container .clues .clues_item .item_top {
  display: flex;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 32rpx;
}
.container .clues .clues_item .item_top .it_left .itl_title_wrapper {
  display: flex;
  align-items: center;
}
.container .clues .clues_item .item_top .it_left .itl_title_wrapper .itlt_title {
  font-size: 28rpx;
  font-family: DFPKingGothicGB-Semibold, DFPKingGothicGB;
  font-weight: 600;
  color: #212121;
  line-height: 36rpx;
}
.container .clues .clues_item .item_top .it_left .itl_title_wrapper .itlt_bage {
  height: 28rpx;
  font-size: 20rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  line-height: 29rpx;
  margin-left: 10rpx;
  background: rgba(246, 74, 51, 0.05);
  color: #f64a33;
  border-radius: 4px;
  padding: 0 4rpx;
}
.container .clues .clues_item .item_top .it_left .itl_title_wrapper .itlt_bage_color {
  color: #2dc440;
  background: rgba(45, 196, 64, 0.05);
}
.container .clues .clues_item .item_top .it_left .itl_phoone {
  font-size: 28rpx;
  font-family: Avenir-Heavy, Avenir;
  font-weight: 800;
  color: #212121;
  line-height: 36rpx;
  margin-top: 10rpx;
}
.container .clues .clues_item .item_top .it_right {
  display: flex;
}
.container .clues .clues_item .item_line {
  margin-left: 30rpx;
  margin-top: 24rpx;
  margin-bottom: 22rpx;
}
.container .clues .clues_item .item_bottom {
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
}
.container .clues .clues_item .item_bottom .ib_left .ibl_text {
  font-size: 24rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #999999;
  line-height: 32rpx;
}
.container .clues .clues_item .item_bottom .ib_right {
  display: flex;
  align-items: center;
}
.container .clues .clues_item .item_bottom .ib_right .ibr_text {
  font-size: 24rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #3173cd;
  line-height: 32rpx;
  margin-right: 10rpx;
}
.container .leads_his {
  margin-top: 10%;
  height: 90%;
}
.container .follow_wrapper {
  padding: 28rpx 30rpx 20rpx 32rpx;
}
.container .follow_wrapper .step_item {
  padding: 20rpx;
  background: #fafafa;
  margin-left: 38rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.container .follow_wrapper .step_item .si_top {
  display: flex;
  justify-content: space-between;
}
.container .follow_wrapper .step_item .si_top .sit_left {
  display: flex;
  align-items: center;
}
.container .follow_wrapper .step_item .si_top .sit_left .sitl_bage {
  background: #3173cd;
  border-radius: 4rpx;
  padding: 0 4rpx;
  font-size: 20rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #ffffff;
  line-height: 28rpx;
}
.container .follow_wrapper .step_item .si_top .sit_left .sitl_bage.red {
  margin-left: 10rpx;
  background: #cd4b31;
}
.container .follow_wrapper .step_item .si_top .sit_left .sltl_stage {
  font-size: 28rpx;
  font-family: DFPKingGothicGB-Semibold, DFPKingGothicGB;
  font-weight: 600;
  color: #212121;
  line-height: 36rpx;
  margin-left: 10rpx;
}
.container .follow_wrapper .step_item .si_top .sit_right {
  display: flex;
  align-items: center;
}
.container .follow_wrapper .step_item .si_top .sit_right .sitr_name {
  font-size: 24rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #212121;
  line-height: 32rpx;
  margin-right: 20rpx;
}
.container .follow_wrapper .step_item .si_top .sit_right .sitr_date {
  font-size: 24rpx;
  font-family: DFPKingGothicGB-Regular, DFPKingGothicGB;
  font-weight: 400;
  color: #999999;
  line-height: 32rpx;
  -webkit-text-stroke: 1rpx #888888;
